{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "ignorePatterns": ["node_modules/", "tests/"],
  "rules": {
    "comma-dangle": "off",
    "function-paren-newline": "off",
    "global-require": "warn",
    "implicit-arrow-linebreak": "off",
    "import/no-dynamic-require": "warn",
    "linebreak-style": "off",
    "no-console": "off",
    "no-unused-vars": "warn",
    "operator-linebreak": "off",
    "strict": "off"
  }
}
